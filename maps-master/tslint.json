{
    "extends": ["tslint-eslint-rules", "tslint-microsoft-contrib"],
    "rules": {
        "eofline": false,
        "export-name": false,
        "function-name": [
            true,
            {
                "function-regex": "^[a-z][\\w\\d]+$",
                "method-regex": "^[a-z][\\w\\d]+$",
                "private-method-regex": "^[a-z][\\w\\d]+$",
                "protected-method-regex": "^[a-z][\\w\\d]+$",
                "static-method-regex": "^[a-zA-Z][\\w\\d]+$"
            }
        ],
        "interface-name": false,
        "linebreak-style": [true, "CRLF"],
        "missing-jsdoc": false,
        "no-any": false,
        "no-implicit-dependencies": false,
        "no-import-side-effect": [true, { "ignore-module": "\\.scss$" }],
        "no-increment-decrement": false,
        "no-object-literal-type-assertion": false,
        "no-parameter-properties": false, // I like parameter properties
        "no-parameter-reassignment": false, // rule's broken
        "no-relative-imports": false,
        "no-submodule-imports": false,
        "no-void-expression": false,
        "object-curly-spacing": [true, "always"],
        "ordered-imports": false,
        "prefer-for-of": false,
        "quotemark": [true, "double"],
        "sort-imports": true,
        "strict-boolean-expressions": false,
        "triple-equals": [true, "allow-undefined-check"],
        "typedef": [true, "call-signature"]
    }
}